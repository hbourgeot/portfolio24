{
  "name": "portfolio24",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "packageManager": "yarn@1.22.21",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "deploy": "yarn install && cd ./apps/backend && yarn install && cd ../frontend && yarn install && cd ../.. && yarn build",
    "dev": "turbo run dev --parallel",
    "dev:frontend": "turbo run dev --filter=frontend",
    "dev:backend": "turbo run dev --filter=backend",
    "build": "turbo run build --parallel",
    "build:frontend": "turbo run build --filter=frontend",
    "build:backend": "turbo run build --filter=backend"
  },
  "dependencies": {
    "turbo": "^1.11.3"
  }
}
